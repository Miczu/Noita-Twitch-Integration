<Entity tags="heart_attack_stack">
    <InheritTransformComponent 
        _enabled="1" />

    <LuaComponent 
        script_source_file="data/scripts/status_effects/hearty_start.lua" 
        execute_every_n_frame="4" 
        remove_after_executed="1" />

    <LuaComponent 
        script_source_file="data/scripts/status_effects/hearty_end.lua" 
        execute_every_n_frame="-1" 
        execute_on_removed="1" />

    <VariableStorageComponent 
        name="effect_hearty" 
        value_float="0.0" />

    <LifetimeComponent 
        lifetime="900" />

    <UIIconComponent 
        name="$status_hearty" 
        description="$statusdesc_hearty" 
        icon_sprite_file="data/ui_gfx/status_indicators/hearty.png" 
        is_perk="0" 
        display_above_head="1" 
        display_in_hud="1" />
</Entity>